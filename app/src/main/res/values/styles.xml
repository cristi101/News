<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="section" parent="AppTheme">
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:background">@color/section_bkgd</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/section</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:paddingRight">@dimen/margin</item>
    </style>

    <style name="picture" parent="AppTheme">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="title" parent="AppTheme">
        <item name="android:background">@color/title_bkgd</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:paddingRight">@dimen/margin</item>
    </style>

    <style name="author" parent="AppTheme">
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:textColor">@color/author</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="date" parent="AppTheme">
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:paddingRight">@dimen/margin</item>
    </style>

    <style name="dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/item_bkgd</item>
        <item name="colorAccent">@color/settings_accent</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="settings" parent="AppTheme">
        <item name="android:windowBackground">@color/item_bkgd</item>
        <item name="colorAccent">@color/settings_accent</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHighlight">@color/selection</item>
        <item name="android:alertDialogTheme">@style/dialog</item>
    </style>


</resources>
